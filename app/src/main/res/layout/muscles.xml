<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/urec_background"
    tools:context=".MuscleScreen">

    <Button
        android:id="@+id/Arms"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="55dp"
        android:alpha="0.93"
        android:text="@string/arms"
        android:textSize="20sp"
        android:onClick="sendArms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Legs"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="55dp"
        android:onClick="sendLegs"
        android:alpha="0.93"
        android:text="@string/legs"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Back"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="230dp"
        android:onClick="sendBack"
        android:alpha="0.93"
        android:text="@string/back"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Shoulders"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="230dp"
        android:onClick="sendShoulders"
        android:alpha="0.93"
        android:text="@string/shoulders"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>